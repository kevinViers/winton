{
  "manifest_version": 2,
  "name": "Winton Replacer",
  "version": "1.0",
  "description": "Replaces 'Winston' with 'Winton'.",
  "permissions": [
    "activeTab", "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  }
}
